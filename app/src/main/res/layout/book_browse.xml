<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.44">

        <RelativeLayout
            android:layout_width="255dp"
            android:layout_height="match_parent"
            android:background="@color/green1">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/publisher_browse"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/author_browse"
                android:layout_alignLeft="@+id/author_browse"
                android:layout_alignStart="@+id/author_browse" />

            <TextView
                android:text="Author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_marginLeft="22dp"
                android:layout_marginStart="22dp"
                android:layout_alignBaseline="@+id/author_browse"
                android:layout_alignBottom="@+id/author_browse"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="18sp"
                android:textColor="@android:color/background_dark" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/author_browse"
                android:textSize="12sp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textView6"
                android:layout_toEndOf="@+id/textView6"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:text="Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_marginTop="34dp"
                android:textSize="18sp"
                android:textColor="@android:color/background_dark"
                android:layout_below="@+id/publisher_browse"
                android:layout_alignLeft="@+id/textView6"
                android:layout_alignStart="@+id/textView6" />

            <TextView
                android:text="Publisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textSize="18sp"
                android:textColor="@android:color/background_dark"
                android:layout_alignBottom="@+id/publisher_browse"
                android:layout_alignLeft="@+id/textView5"
                android:layout_alignStart="@+id/textView5" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/title_browse"
                android:textSize="12sp"
                android:layout_alignTop="@+id/textView7"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/textView5"
                android:layout_toEndOf="@+id/textView5" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/subject_browse"
                android:textSize="12sp"
                android:layout_below="@+id/title_browse"
                android:layout_toRightOf="@+id/textView6"
                android:layout_toEndOf="@+id/textView6" />

            <TextView
                android:text="Subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:layout_alignBottom="@+id/subject_browse"
                android:layout_alignLeft="@+id/textView7"
                android:layout_alignStart="@+id/textView7" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:background="@color/green1">

            <Button
                android:text="Search"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/searchbtn"
                android:textSize="18sp" />

            <Button
                android:text="Year ASC"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:id="@+id/yearasc"
                android:textSize="14sp" />

            <Button
                android:text="Year DESC"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:id="@+id/yeardesc"
                android:textSize="14sp" />

            <Button
                android:text="Feedback ASC"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:id="@+id/feedbackasc"
                android:textSize="14sp"
               />

            <Button
                android:text="Feedback DESC"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:id="@+id/feedbackdesc"
                android:textSize="14sp"
              />
        </LinearLayout>
    </LinearLayout>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="353dp"
        android:numColumns="2"
        android:horizontalSpacing="20dp"
        android:verticalSpacing="30dp"
        android:id="@+id/simpleGridView"
        android:background="@color/pink"
        android:layout_weight="0.75" />

</LinearLayout>