<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_admin__main_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lakshita.bookstore.Admin_MainPage">

    <Button
        android:text="Add Book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="197dp"
        android:id="@+id/button_ToaddBook"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="addBookActivityFunction"/>

    <TextView
        android:text="Welcome!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_ToViewAllBook"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="68dp"
        android:id="@+id/textView4"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <Button
        android:text="View Books"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_ToViewAllBook"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/button_ToaddBook"
        android:layout_alignRight="@+id/button_ToaddBook"
        android:layout_alignEnd="@+id/button_ToaddBook"
        android:onClick="parseJSON"/>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/books_textView" />

    <Button
        android:text="Statistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:id="@+id/button_statistics"
        android:layout_below="@+id/button_ToViewAllBook"
        android:layout_alignLeft="@+id/button_ToaddBook"
        android:layout_alignStart="@+id/button_ToaddBook" />

</RelativeLayout>
